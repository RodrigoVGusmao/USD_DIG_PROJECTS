package janelas;

import org.eclipse.swt.widgets.Dialog;
import org.eclipse.swt.widgets.Display;
import org.eclipse.swt.widgets.Shell;

import org.eclipse.swt.SWT;
import org.eclipse.swt.events.MouseAdapter;
import org.eclipse.swt.events.MouseEvent;
import org.eclipse.swt.layout.GridLayout;
import org.eclipse.swt.widgets.Label;
import org.eclipse.swt.widgets.Composite;
import org.eclipse.swt.widgets.Decorations;
import org.eclipse.swt.layout.FormLayout;
import org.eclipse.swt.layout.FormData;
import org.eclipse.swt.layout.FormAttachment;
import org.eclipse.swt.layout.GridData;
import org.eclipse.wb.swt.SWTResourceManager;

public class Velha extends Dialog {

	protected Object result;
	protected Shell shlVelha;

	/**
	 * Create the dialog.
	 * @param parent
	 * @param style
	 */
	public Velha(Shell parent, int style) {
		super(parent, style);
		setText("SWT Dialog");
	}

	/**
	 * Open the dialog.
	 * @return the result
	 */
	public Object open() {
		createContents();
		shlVelha.open();
		shlVelha.layout();
		Display display = getParent().getDisplay();
		while (!shlVelha.isDisposed()) {
			if (!display.readAndDispatch()) {
				display.sleep();
			}
		}
		return result;
	}

	/**
	 * Create contents of the dialog.
	 */
	private void createContents() {
		shlVelha = new Shell(getParent(), SWT.DIALOG_TRIM | SWT.RESIZE);
		shlVelha.setSize(300, 300);
		shlVelha.setText("velha");
		shlVelha.setLayout(new FormLayout());
		
		Composite composite = new Composite(shlVelha, SWT.NONE);
		FormData fd_composite = new FormData();
		fd_composite.top = new FormAttachment(0);
		fd_composite.left = new FormAttachment(0);
		fd_composite.bottom = new FormAttachment(0, 261);
		fd_composite.right = new FormAttachment(0, 284);
		composite.setLayoutData(fd_composite);
		composite.setLayout(new GridLayout(3, true));
		
		Label lblCampo = new Label(composite, SWT.NONE);
		lblCampo.setLayoutData(new GridData(SWT.CENTER, SWT.CENTER, true, true, 1, 1));
		lblCampo.setImage(null);
		lblCampo.addMouseListener(new MouseAdapter() {
			@Override
			public void mouseUp(MouseEvent e)
			{
				((Label) e.getSource()).setImage(SWTResourceManager.getImage(Velha.class, "/janelas/x.png"));
			}
		});
		
		Label lblCampo_1 = new Label(composite, SWT.NONE);
		lblCampo_1.setLayoutData(new GridData(SWT.CENTER, SWT.CENTER, true, true, 1, 1));
		lblCampo_1.setImage(null);
		lblCampo_1.addMouseListener(new MouseAdapter() {
			@Override
			public void mouseUp(MouseEvent e)
			{
				
			}
		});
		
		Label lblCampo_2 = new Label(composite, SWT.NONE);
		lblCampo_2.setLayoutData(new GridData(SWT.CENTER, SWT.CENTER, true, true, 1, 1));
		lblCampo_2.setImage(null);
		lblCampo_2.addMouseListener(new MouseAdapter() {
			@Override
			public void mouseUp(MouseEvent e)
			{
				
			}
		});
		
		Label lblCampo_3 = new Label(composite, SWT.NONE);
		lblCampo_3.setLayoutData(new GridData(SWT.CENTER, SWT.CENTER, true, true, 1, 1));
		lblCampo_3.setImage(null);
		lblCampo_3.addMouseListener(new MouseAdapter() {
			@Override
			public void mouseUp(MouseEvent e)
			{
				
			}
		});
		
		Label lblCampo_4 = new Label(composite, SWT.NONE);
		lblCampo_4.setLayoutData(new GridData(SWT.CENTER, SWT.CENTER, true, true, 1, 1));
		lblCampo_4.setImage(null);
		lblCampo_4.addMouseListener(new MouseAdapter() {
			@Override
			public void mouseUp(MouseEvent e)
			{
				
			}
		});
		
		Label lblCampo_5 = new Label(composite, SWT.NONE);
		lblCampo_5.setLayoutData(new GridData(SWT.CENTER, SWT.CENTER, true, true, 1, 1));
		lblCampo_5.setImage(null);
		lblCampo_5.addMouseListener(new MouseAdapter() {
			@Override
			public void mouseUp(MouseEvent e)
			{
				
			}
		});
		
		Label lblCampo_6 = new Label(composite, SWT.NONE);
		lblCampo_6.setLayoutData(new GridData(SWT.CENTER, SWT.CENTER, true, true, 1, 1));
		lblCampo_6.setImage(null);
		lblCampo_6.addMouseListener(new MouseAdapter() {
			@Override
			public void mouseUp(MouseEvent e)
			{
				
			}
		});
		
		Label lblCampo_7 = new Label(composite, SWT.NONE);
		lblCampo_7.setLayoutData(new GridData(SWT.CENTER, SWT.CENTER, true, true, 1, 1));
		lblCampo_7.setImage(null);
		lblCampo_7.addMouseListener(new MouseAdapter() {
			@Override
			public void mouseUp(MouseEvent e)
			{
				
			}
		});
		
		Label lblCampo_8 = new Label(composite, SWT.NONE);
		lblCampo_8.setLayoutData(new GridData(SWT.CENTER, SWT.CENTER, true, true, 1, 1));
		lblCampo_8.setImage(SWTResourceManager.getImage(Velha.class, "/janelas/o.png"));
		lblCampo_8.addMouseListener(new MouseAdapter() {
			@Override
			public void mouseUp(MouseEvent e)
			{
				
			}
		});

	}
}
