package janelas;

import org.eclipse.swt.events.MouseAdapter;
import org.eclipse.swt.events.MouseEvent;
import org.eclipse.swt.widgets.Label;

import jogadores.Usuario;
import velha.CampoPreenchido;
import velha.Velha;

public class MouseAdapterVelha extends MouseAdapter {
	Usuario jogador;
	Velha velha;
	int index;
	
	public MouseAdapterVelha(Usuario jogador, Velha velha, int index)
	{
		super();
		this.jogador = jogador;
		this.velha = velha;
		this.index = index;
	}
	
	@Override
	public void mouseUp(MouseEvent e)
	{
		try {
			jogador.fazerjogada(velha, index);
		}catch(CampoPreenchido e1)
		{
			
		}
		
		Label lbl = ((Label) e.getSource());
		lbl.redraw();
	}
}
