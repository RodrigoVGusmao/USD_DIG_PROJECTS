package projetoJava;

import org.eclipse.swt.SWT;
import org.eclipse.swt.widgets.Display;
import org.eclipse.swt.widgets.Shell;
import org.eclipse.swt.widgets.Label;
import org.eclipse.wb.swt.SWTResourceManager;
import swing2swt.layout.FlowLayout;
import org.eclipse.swt.widgets.CoolBar;

public class MainWindow extends Shell {

	/**
	 * Launch the application.
	 * @param args
	 */
	public static void main(String args[]) {
		try {
			Display display = Display.getDefault();
			MainWindow shell = new MainWindow(display);
			
			Login login = new Login(shell, 0);
			login.open();
			

			
			shell.open();
			shell.layout();
			while (!shell.isDisposed()) {
				if (!display.readAndDispatch()) {
					display.sleep();
				}
			}
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	/**
	 * Create the shell.
	 * @param display
	 */
	public MainWindow(Display display) {
		super(display, SWT.SHELL_TRIM);
		setLayout(null);
		
		Label lblUsurio = new Label(this, SWT.NONE);
		lblUsurio.setBounds(10, 10, 43, 15);
		lblUsurio.setText("Usu\u00E1rio:");
		
		Label lblNotLoggedIn = new Label(this, SWT.NONE);
		lblNotLoggedIn.setBounds(59, 10, 333, 15);
		lblNotLoggedIn.setForeground(SWTResourceManager.getColor(SWT.COLOR_RED));
		lblNotLoggedIn.setText("not logged in");
		
		CoolBar coolBar = new CoolBar(this, SWT.FLAT);
		coolBar.setBounds(10, 55, 150, 30);
		createContents();
	}

	/**
	 * Create contents of the shell.
	 */
	protected void createContents() {
		setText("SWT Application");
		setSize(450, 300);

	}

	@Override
	protected void checkSubclass() {
		// Disable the check that prevents subclassing of SWT components
	}
}
