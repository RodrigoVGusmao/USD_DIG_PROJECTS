package projetoJava;

import java.sql.*;

import javax.swing.JOptionPane;

public class Banco {
	private static String hostName = "jdbc:mysql://localhost:3306/bd_java_velha";
	private static String adminUser = "admin";
	private static String psswd = "psswd";
	
	public Banco() throws SQLException
	{
		super();
		
		try {
			Connection adminCon = createAdminConnection();
		} catch(SQLException e)
		{
			int result = JOptionPane.YES_OPTION;
			while(result == JOptionPane.YES_OPTION)
				result = JOptionPane.showConfirmDialog(null, "Não foi possivel conectar ao banco de dados! Deseja tentar novamente?");
		}
	}
	
	public static Connection createAdminConnection() throws SQLException
	{
		return DriverManager.getConnection(hostName, adminUser, psswd);
	}
	
	public Connection createUserConnection(String username, String psswd) throws SQLException
	{
		return DriverManager.getConnection(hostName, username, psswd);
	}
}
